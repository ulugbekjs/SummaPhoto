package Generator;

import android.R.integer;


public class BlockTemplate extends Template{

	private BlockTemplate(int blocks, int vertical) {
		super(blocks, vertical);
	}

	public static BlockTemplate getTemplate(int num) {
		BlockTemplate template = null;
		switch (num) {
		case 1:
			template =  getTemplate1();
		default:
			break;
		}

		return template;
	}

	private static BlockTemplate getTemplate1() {
		BlockTemplate template = new BlockTemplate(9);

		template.slots[0] = new Slot(new PixelPoint(0, 0), new PixelPoint(1761, 1357));
		template.slots[1] = new Slot(new PixelPoint(0, 1358), new PixelPoint(1761, 2448));
		template.slots[2] = new Slot(new PixelPoint(1762, 0), new PixelPoint(2715, 1013));
		template.slots[3] = new Slot(new PixelPoint(2716, 0), new PixelPoint(3264, 1013));
		template.slots[4] = new Slot(new PixelPoint(1762, 1014), new PixelPoint(2431, 1725));
		template.slots[5] = new Slot(new PixelPoint(2432, 1014), new PixelPoint(2850, 1775));
		template.slots[6] = new Slot(new PixelPoint(2851, 1014), new PixelPoint(3264, 1775));
		template.slots[7] = new Slot(new PixelPoint(1762, 1725), new PixelPoint(2431, 2448));
		template.slots[8] = new Slot(new PixelPoint(2432, 1775), new PixelPoint(3264, 2448));

		return template;
	}

}
