package PhotoListener;

import java.io.IOException;
import java.util.Date;

import com.drew.imaging.ImageMetadataReader;
import com.drew.metadata.Metadata;

import Common.Photo;
import Common.Point;

import android.media.ExifInterface;

public class PhotoListenerThread {

	public PhotoListenerThread() {
	}

	public Photo createPhotoFromFile(String path) {


		// extract photo metadata
		Date date = null;
		float[] location = null;

		String jpegFile = "c:\\users\\yonatan\\pictures\\try.jpg";
		Metadata metadata = null;
		try {
			metadata = ImageMetadataReader.readMetadata(jpegFile);
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		String orientation = metadata.getAttribute(ExifInterface.TAG_ORIENTATION);
		
		Photo photo = new Photo(date, new Point(2, 2), true);
		return photo;
	}
}
