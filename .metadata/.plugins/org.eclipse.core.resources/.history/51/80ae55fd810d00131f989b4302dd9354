package Common;

import java.util.Iterator;
import java.util.Set;
import java.util.TreeSet;
import java.util.UUID;

/**
 * Abstract class for the two types of Events in the system
 * @author yonatan
 *
 */
public abstract class AbstractEvent {
	
	private UUID eventID;
	protected Set<Photo> verticalPhotos = new TreeSet<Photo>();
	protected Set<Photo> horizontalPhotos = new TreeSet<Photo>();
	
	public AbstractEvent() {
		eventID = UUID.randomUUID();
	}
	
	public boolean isEmpty() {
		return (getEventSize() == 0); 
	}

	public UUID getEventID() {
		return this.eventID;	
	}

	public int getEventSize() {
		return this.horizontalPhotos.size() + this.verticalPhotos.size();
	}

	public boolean isPhotoInEvent(Photo photo) {
		return (verticalPhotos.contains(photo) || horizontalPhotos.contains(photo));
	}
	
	public Set<Photo> verticalPhotos() {
		return verticalPhotos;
	}	
	
	public Set<Photo> horizontalPhotosIterator() {
		return horizontalPhotos.iterator();
	}
	
	public Set<Photo> getEventPhotos() {
		Set<Photo> retSet = new TreeSet<Photo>();
		retSet.addAll(horizontalPhotos);
		retSet.addAll(verticalPhotos);
		
		return retSet;
	}
	
	public abstract void addPhoto(Photo photo);
	
}
